@prefix odrl: <http://www.w3.org/ns/odrl/2/>.
@prefix ex: <http://example.org/>.
@prefix dct: <http://purl.org/dc/terms/>.

<urn:uuid:prefences-policy> a odrl:Offer;
  dct:description "Policy that allows scanners to read all product information from Delfour.";
  odrl:permission <urn:uuid:preference-permission>.

<urn:uuid:preference-permission> a odrl:Permission;
  odrl:action odrl:read;
  odrl:target ex:products; # TBD: Must be an Asset Collection that contain all Delfour products
  odrl:assignee ex:scanner; # TBD: Either we know there is one scanner or there is a need for a scanner Party Collection
  odrl:assigner ex:delfour.
